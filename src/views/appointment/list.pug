extends ../layout

block content 

    h1 Appointments 
    
    if role==="patient"
        section(class="new-appointment-section")
            a(href="/appointments/create" class="new-appointment") New Appointment

    section(class="appointment-list")
        if appointments
            each appointment in appointments
                a(href=`/appointment/${appointment.appointment_id}`)
                    include appointmentCard
        else 
            p There is no appointment available
        