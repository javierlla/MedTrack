extends ../layout

block content 

    if appointments
        p Citas ya cogidas
            ul
                each appointment in appointments
                    li= appointment
    
    h1 New Appointment 

    form(action="/appointments/availables", method="get") 
        section
            label(for="speciallity") Speciality
            select#speciality(name="speciality")
                option(value="Pediatry") Pediatry
                option(value="Cardiology") Cardiology

            label(for="day") Day
            input#day(type="date", name="day")

            label(for="hour") Hour
            select#hour(name="hour")
                option(value="8:00") 8:00
                option(value="9:00") 9:00
                option(value="10:00") 10:00
                option(value="11:00") 11:00

            button Choose