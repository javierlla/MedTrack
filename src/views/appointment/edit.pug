extends ../layout
block content 
    h1 Edit Appointment 
    form(action=`/appointment/${appointment.appointment_id}`, method="post") 
        label(for="day") Day

        select#day(name="day") 
            option(value="Mon.") Mon.
            option(value="Tues.") Tues. 
            option(value="Wedn.") Wedn.
            option(value="Thurs.") Thurs.
            option(value="Fri.") Fri.
        
        label(for="hour") Hour

        select#hour(name="hour") 
            option(value="8:00") 8:00
            option(value="9:00") 9:00
            option(value="10:00") 10:00
            option(value="11:00") 11:00
        
        label(for="speciallity") speciallity
        
        select#spaciallity(name="speciallity")
        button Submit