article 
    
    p(class="prescription-card__date")=appointment.date
    p(class="prescription-card__patient")= "Nombre: " + appointment.patient.name + " " + appointment.patient.surname
    p(class="prescription-card__doctor")= "Doctor: " + appointment.doctor.name + " " + appointment.doctor.surname
    p(class="prescription-card__doctor-spaciallity")= "Speciality: " + appointment.doctor.speciality
    
    if appointment.prescription
        h2(class="prescription-card")= appointment.prescription.prescription_id
        if appointment.prescription.medications 
            h3 Medications
            section(class="prescription-medications")
                each medication in appointment.prescription.medications 
                    article(class="prescription-medication")
                        h4= medication.name

        if role==="doctor"              
            a(href=`/prescription/${appointment.prescription.prescription_id}/edit`)
                button Edit
            form(action=`/prescription/${appointment.prescription.prescription_id}/delete`, method="post") 
                button Delete

    
